{
    "name": "ampersa/hotdog",
    "description": "Hotdog - A simple console app micro-framework",
    "require": {
        "php": ">=7.0",
        "vlucas/phpdotenv": "~2.4",
        "larapack/dd": "^1.1",
        "monolog/monolog": "^1.22"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.9"
    },
    "autoload": {
        "psr-4": {
            "Commands\\": "commands/",
            "System\\": "system/"
        },
        "files": [
            "system/Support/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { 
            "AppTests\\": "tests/" 
        }
    }
}
