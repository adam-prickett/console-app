{
    "name": "ampersa/console-app",
    "description": "Simple Console App Framework",
    "require": {
        "php": ">=5.6",
        "vlucas/phpdotenv": "~2.4",
        "larapack/dd": "^1.1",
        "monolog/monolog": "^1.22"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.9"
    },
    "autoload": {
        "psr-4": {
            "Commands\\": "commands/",
            "System\\": "system/"
        },
        "files": [
            "system/Support/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { 
            "AppTests\\": "tests/" 
        }
    }
}
